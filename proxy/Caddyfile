{$DOMAIN} {
    encode gzip zstd
    tls simon.gardette@syslex.fr
    @api path /api/*
    handle @api {
        uri strip_prefix /api
        reverse_proxy backend:3000
    }

    handle {
        reverse_proxy frontend:8080
    }
}

localhost, 127.0.0.1, ::1 {
    log {
        level DEBUG
    }
    tls internal
    @api path /api/*
    handle @api {
        uri strip_prefix /api
        reverse_proxy backend:3000
    }

    handle {
        reverse_proxy frontend:8080
    }
}
